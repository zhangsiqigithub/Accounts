<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/setting_list_item_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardUseCompatPadding="true">

        <FrameLayout
            android:id="@+id/setting_list_item_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_list_item_height"
            android:background="#546546">

            <TextView
                android:id="@+id/setting_list_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dip"
                android:text="@string/string_account_book_default_title"
                android:textColor="@android:color/white"
                android:textSize="12dip" />

            <TextView
                android:id="@+id/setting_list_item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="10dip"
                android:text="15ç¬”"
                android:textColor="@android:color/white"
                android:textSize="10dip" />
        </FrameLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>