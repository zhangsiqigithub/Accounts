<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dip">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dip"
            android:background="@mipmap/bg_account_book_img1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/home_menu_bg"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:gravity="center">

                <ImageView
                    android:layout_width="28dip"
                    android:layout_height="28dip"
                    android:background="@drawable/shape_oval_44ffffff"
                    android:padding="5dip"
                    android:src="@mipmap/icon_menu" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_stoke_white"
                android:gravity="center"
                android:paddingBottom="2dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="2dip"
                android:text="日常账本"
                android:textColor="#eeeeee"
                android:textSize="12dip" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_add_bg"
            android:padding="2dip">

            <ImageView
                android:id="@+id/home_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_add_bg_stroke"
                android:gravity="center"
                android:padding="25dip"
                android:src="@mipmap/icon_add" />
        </FrameLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/home_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/string_home_tv_hint"
        android:textColor="#44444444"
        android:textSize="30dip" />
</RelativeLayout>