<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/setting_list_item_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/color_bg"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_list_item_height"
            android:background="@drawable/shape_account_book_add_bg"
            android:gravity="center">

            <ImageView
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:src="@mipmap/icon_add_888888" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>