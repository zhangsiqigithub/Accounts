                android:id="@+id/calculator_text_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_accounting_calculator_ok"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/accounting_calculator_text_padding"
                android:text="OK"
                android:textColor="@color/color_accounting_calculator_number_text"
                android:textSize="@dimen/accounting_calculator_text_size" />
