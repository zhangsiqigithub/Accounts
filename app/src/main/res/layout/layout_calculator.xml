            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/accounting_calculator_line1"
                android:layout_marginTop="@dimen/accounting_calculator_line1"
                android:background="@color/color_accounting_calculator_line" />

            <ImageView
